@page
@using AutomobileRent.Core.Models
@model AutoRent.FrontEnd.Pages.ElectricModel
@{
	ViewData["Title"] = "Electric Cars";
	Layout = "Shared/_Layout";
}

<table class="my-table">
    <tr class="my-table-row-headings">
        <th>ID</th>
        <th>Maker</th>
        <th>Model</th>
        <th>RentPrice</th>
        <th>BatteryCapacity</th>
        <th>ChargeTime</th>
    </tr>
    @foreach (Electric ev in Model.ElectricCars)
    {
        <tr class="my-table-row">
            <td class="my-table-column">@ev.Id</td>
            <td>@ev.Maker</td>
            <td>@ev.Model</td>
            <td>@ev.RentPrice.ToString("F2") €</td>
            <td>@ev.BatteryCapacity kWh</td>
            <td>@ev.ChargeTime hr</td>
        </tr>
    }
</table>

<br>
<br>
<br>

<div class="text-left">
    <h1 class="display-4">Add new electric car</h1>
    <p>Enter data to add a new car to the list</p>
</div>

<br>

<form>
    <label for="maker">Enter car maker:</label><br>
    <input type="text" id="maker" maker="maker"><br><br>
    <label for="model">Enter car model:</label><br>
    <input type="text" id="model" model="model"><br><br>
    <label for="rentPrice">Enter car rent price per day:</label><br>
    <input type="text" id="rentPrice" rentPrice="rentPrice"><br><br>
    <label for="batteryCapacity">Enter car battery capacity (kWh):</label><br>
    <input type="text" id="batteryCapacity" batteryCapacity="batteryCapacity"><br><br>
    <label for="chargeTime">Enter car charging time (hr):</label><br>
    <input type="text" id="chargeTime" chargeTime="chargeTime"><br><br>
    <br>
    <input type="submit">

</form>

